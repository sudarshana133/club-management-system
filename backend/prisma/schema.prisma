generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  ADMIN
  STUDENT
}

model User {
  uId              String   @id @default(uuid())
  email            String   @unique
  password         String
  clubName         String
  eventId          String
  role             UserType
  members          Member[]
  registeredEvents Event[]
}

model Club {
  uId      String   @id @default(uuid())
  clubName String
  events   Event[]
  members  Member[]
}

model Event {
  uId                String   @id @default(uuid())
  title              String
  description        String
  date               DateTime
  venue              String
  fees               Int?
  clubId             String
  coordinators       Member[]
  registeredStudents User[]
  club               Club     @relation(fields: [clubId], references: [uId])
}

model Member {
  studentId     String
  clubId        String
  coordinatorId String
  user          User   @relation(fields: [studentId], references: [uId])
  club          Club   @relation(fields: [clubId], references: [uId])
  event         Event  @relation(fields: [coordinatorId], references: [uId])

  @@id([studentId, clubId])
}
