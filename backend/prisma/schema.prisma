generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType{
  ADMIN
  STUDENT
}

model User{
  uId String @id @default(uuid())
  email String @unique
  password String
  role UserType
  clubName String
  members Member[]
}

model Club{
  uId String @id @default(uuid())
  clubName String
  events Event[]
  members Member[]
}

model Event{
  uId String @id @default(uuid())
  title String
  description String
  date DateTime
  venue String
  fees Int?
  club Club  @relation(fields: [clubId],references: [uId])
  clubId String
  coordinators Member[]
}

model Member{
  uId String @id @default(uuid())
  user User @relation(fields: [studentId],references: [uId])
  studentId String
  club Club @relation(fields: [clubId],references: [uId])
  clubId String
  event Event @relation(fields: [coordinatorId],references: [uId])
  coordinatorId String
}
