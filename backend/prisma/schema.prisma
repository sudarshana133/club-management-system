generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  ADMIN
  STUDENT
}

model User {
  uId              String   @id @default(uuid())
  email            String   @unique
  password         String
  clubName         String?  @unique
  eventId          String?
  role             UserType
  members          Member[]
  registeredEvents RegisteredEvent[]
  adminOf          Club?
}

model Club {
  uId      String   @id @default(uuid())
  clubName String   @unique
  events   Event[]
  members  Member[]
  admin    User     @relation(fields: [adminId], references: [uId])
  adminId  String   @unique
}

model Event {
  uId                String   @id @default(uuid())
  title              String
  description        String
  date               DateTime
  venue              String
  fees               Int?     @default(0)
  clubId             String
  coordinators       Member[]
  registeredStudents RegisteredEvent[]
  club               Club     @relation(fields: [clubId], references: [uId])
}

model Member {
  studentId     String
  clubId        String
  coordinatorId String
  user          User   @relation(fields: [studentId], references: [uId])
  club          Club   @relation(fields: [clubId], references: [uId])
  event         Event  @relation(fields: [coordinatorId], references: [uId])

  @@id([studentId, clubId])
}

model RegisteredEvent{
  userId String
  eventId String
  user User @relation(fields: [userId],references: [uId])
  event Event @relation(fields: [eventId],references: [uId])
  @@id([userId,eventId])
}
